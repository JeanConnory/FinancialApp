<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppControleFinanceiro.Views.TransactionList"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="TransactionList"
    NavigationPage.HasNavigationBar="False">
    <VerticalStackLayout>
        <Grid Padding="15" ColumnDefinitions="50, *, Auto">
            <Label
                BackgroundColor="White"
                FontSize="20"
                HorizontalOptions="Center"
                Text="S"
                VerticalOptions="Center" />
            <VerticalStackLayout Grid.Column="1">
                <Label Text="SalÃ¡rio" />
                <Label Text="02/02/2023" TextColor="#BABABA" />
            </VerticalStackLayout>
            <Label
                Grid.Column="2"
                Text="R$ 3.600,00"
                TextColor="{StaticResource Tertiary}"
                VerticalOptions="Center" />
        </Grid>

        <Button
            Clicked="OnButtonClicked_To_TransactionEdit"
            HorizontalOptions="Center"
            Text="Edit" />

        <Border
            Margin="10"
            Padding="10,15"
            BackgroundColor="{StaticResource Black}"
            StrokeShape="RoundRectangle 30"
            StrokeThickness="0">
            <Grid ColumnDefinitions="*, auto" RowDefinitions="Auto, Auto, 30, Auto, Auto">
                <Label
                    Margin="10,0"
                    FontSize="18"
                    Text="Saldo"
                    TextColor="#979797" />
                <Label
                    Grid.Row="1"
                    Margin="10,0"
                    FontSize="36"
                    Text="R$ 2.760,00"
                    TextColor="White" />
                <Button
                    Grid.RowSpan="2"
                    Grid.Column="1"
                    Padding="0"
                    Clicked="OnButtonClicked_To_TransactionAdd"
                    CornerRadius="27"
                    FontSize="48"
                    HeightRequest="54"
                    HorizontalOptions="Center"
                    Text="+"
                    WidthRequest="54" />

                <Label
                    Grid.Row="3"
                    Margin="10,0"
                    FontSize="8"
                    Text="Receitas"
                    TextColor="#979797" />
                <Label
                    Grid.Row="4"
                    Margin="10,0"
                    FontSize="12"
                    Text="R$ 3.600,00"
                    TextColor="White" />

                <Label
                    Grid.Row="3"
                    Grid.Column="1"
                    FontSize="8"
                    Text="Despesas"
                    TextColor="#979797" />
                <Label
                    Grid.Row="4"
                    Grid.Column="1"
                    FontSize="12"
                    Text="R$ 840,00"
                    TextColor="White" />
            </Grid>
        </Border>
    </VerticalStackLayout>
</ContentPage>